<style>
    #pen, res,status{
      color:rgb(181, 219, 13);
font-family: 'Major Mono Display', monospace;
   
  }
    #conte {
    display: inline;
    word-wrap: break-word;
    white-space: pre-line;
  }
  
</style>
<script>
    $(document).ready(function (){
        $('#pend').click(function(){
            $('#info').hide();
            $('#con').hide();
            $('#ven').hide();
            $('#pen').show();
            
            
            return false;
        })
  updateTodos2();   
  });
  const updateTodos2 = () =>{
      fetch('http://localhost:5800/pendientes')
      .then(res => res.json())
      .then(data =>{
          if(data.response === 'success'){
              const imas = data.data;
              document.querySelector('#pen').innerHTML = '';
              imas.forEach(imase => {
                document.querySelector('#pen').innerHTML += 
                `<div id="res">     
                  <a id="update" class="btn btn-outline-danger" href="/update/${imase._id}"><svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z"/>
  <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z"/>
</svg></a>
                <div> 
                  <h1>Titulo</h1>
                  <h6>${imase.titulo} </h6>
                </div>
                <h1>Descripcion</h1>
                <div id='conte'>
                  <h6>${imase.mensaje} </h6>
                </div>
                <div>
                  <h1>Status</h1>
                  <h5 id='status'>${imase.status} </h5>
                </div>
              <div class="action-container">
              <a id="drop" class="btn btn-outline-danger" href="/delete/${imase._id}">X</a>
              <div>
              </div>
                `
              });
          }
  })
  .catch(err =>{
      console.error(err);
  })
  }
</script>